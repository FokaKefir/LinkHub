<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.fragment.SearchFragment">

    <EditText
        android:id="@+id/txt_frag_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@id/btn_frag_search"
        android:hint="Search" />
    <ImageView
        android:id="@+id/btn_frag_search"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_search_24"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/btn_frag_filter"
        android:clickable="true"/>
    <ImageView
        android:id="@+id/btn_frag_filter"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_filter_alt_24"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"/>



    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recycler_Post"
        android:layout_below="@id/txt_frag_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        />

</RelativeLayout>